<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/text_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accident Detection &amp; Reporting"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- User avatar -->
    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/first"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_header"
        android:layout_marginTop="10dp"/>

    <!-- Stress Level Indicator -->

    <!-- Stress Level Text -->

    <!-- Start Stress Detection Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_main1"
        android:layout_width="wrap_content"
        android:layout_height="419dp"
        android:layout_below="@id/image_avatar"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"




        android:layout_marginBottom="2dp"
        android:backgroundTint="#00ffff"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/linear_1"
            android:layout_width="339dp"
            android:layout_height="448dp"
            android:layout_below="@id/image_avatar"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:id="@+id/text_stress_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This App uses Accelerometer sensor to detect accident and sends an sms message to your added emergency contacts with your current location."
                android:textAlignment="inherit"
                android:textColor="#363A43"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnStartLocationTracking"
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:layout_below="@id/text_stress_level"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="19dp"
                android:text="Start location tracking"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnRemoveLocationTracking"
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:layout_below="@id/btnStartLocationTracking"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="19dp"
                android:text="Stop location tracking"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnAccelerometerReadings"
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:layout_below="@id/btnRemoveLocationTracking"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="19dp"
                android:text="Turn On Detection"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnShowOnMap"
                android:layout_width="250dp"
                android:layout_height="65dp"
                android:layout_below="@id/btnAccelerometerReadings"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="19dp"
                android:text="Show Your Location"
                android:textColor="#000000"
                android:textSize="18sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>
